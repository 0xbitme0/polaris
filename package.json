{
  "name": "polaris-root",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.13.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "initialize": "yarn install && yarn clean && lerna bootstrap",
    "clean": "lerna clean --yes && lerna exec --no-bail -- rm -rf dist && lerna exec --no-bail -- rm -rf build",
    "refresh": "lerna bootstrap",
    "build": "lerna run build --stream",
    "dev:polaris": "lerna run dev --stream --scope=@shopify/polaris",
    "build:polaris": "lerna run build --stream --scope=@shopify/polaris",
    "dev:site": "lerna run dev --stream --scope=site",
    "build:site": "lerna run build --stream --scope=site"
  },
  "devDependencies": {
    "@shopify/typescript-configs": "^5.1.0",
    "lerna": "^4.0.0",
    "typescript": ">=3.0.0"
  }
}
